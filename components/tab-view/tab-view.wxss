.tab {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
}
.tab .tab-name {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  padding: 0 20rpx;
  color: #666;
  font-size: 30rpx;
}
.tab .active {
  color: #0051ff;
  position: relative;
}
.tab .active::after {
  content: '';
  width: 170rpx;
  height: 5rpx;
  background-color: #0051ff;
  position: absolute;
  bottom: 0;
}
.content-index {
  width: 100%;
}
