.shop-box {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 26rpx;
}
.shop-box .shop-left {
  width: 191rpx;
  height: 191rpx;
  display: flex;
  align-items: center;
}
.shop-box .shop-left .url-img {
  width: 100%;
  height: 100%;
}
.shop-box .shop-left .url-img .shop-img {
  width: 100%;
  height: 100%;
}
.shop-box .shop-right {
  font-size: 26rpx;
  padding: 17rpx 0 17rpx 29rpx;
  width: 463rpx;
}
.shop-box .shop-right .right-desc {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
}
.shop-box .shop-right .right-desc .shop-name {
  white-space: wrap;
  color: #555;
}
.shop-box .shop-right .right-desc .shop-price {
  color: #0051ff;
}
