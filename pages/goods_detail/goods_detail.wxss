.top-swiper {
  height: 497rpx;
}
.top-swiper .pic-item .pic-img {
  width: 100%;
  height: 100%;
}
.goods-msg {
  padding: 20rpx 30rpx;
}
.goods-msg .price-favorite {
  display: flex;
  justify-content: space-between;
}
.goods-msg .price-favorite .price {
  color: #0051ff;
  font-size: 36rpx;
}
.goods-msg .price-favorite .price .price-num {
  letter-spacing: -3rpx;
  font-size: 46rpx;
}
.goods-msg .price-favorite .share-favorite .iconfont {
  position: relative;
  font-size: 50rpx;
  padding-left: 20rpx;
}
.goods-msg .price-favorite .share-favorite .icon-tab {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  padding: 0;
  opacity: 0;
}
.goods-msg .goods_name {
  padding: 20rpx 0;
  font-size: 36rpx;
  color: #444;
  font-weight: 600;
  white-space: wrap;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  line-clamp: 3;
}
.truncated {
  height: 20rpx;
  background-color: #eee;
}
.graphic-details {
  padding: 40rpx 0 100rpx;
  text-align: center;
}
.graphic-details h5 {
  font-size: 36rpx;
  color: #444;
  font-weight: 600;
}
.graphic-details .goods_introduce {
  padding-top: 20rpx;
  margin-top: 20rpx;
  font-size: 0;
}
.cart-tab .icon-tab {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  width: 110rpx;
  font-size: 26rpx;
  color: #444;
  cursor: pointer;
}
.cart-tab button.icon-tab {
  margin: 0;
  padding: 0;
  line-height: 1;
  background-color: #fff;
  font-weight: normal;
}
