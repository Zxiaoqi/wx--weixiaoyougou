.scroll-view-item {
  height: calc(100vh - 100rpx);
}
.main {
  display: flex;
}
.main .scroll-left {
  width: calc(25%);
  height: calc(100vh - 100rpx);
  background-color: #F3F3F3;
}
.main .scroll-left .title-left {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 18rpx 0;
  font-size: 35rpx;
  color: #585858;
}
.main .scroll-left .active {
  color: #0051ff;
  background-color: #fff;
  position: relative;
}
.main .scroll-left .active::before {
  content: '';
  width: 5rpx;
  height: 43rpx;
  background-color: currentColor;
  position: absolute;
  left: 0;
}
.main .scroll-right {
  width: calc(75%);
  height: calc(100vh - 100rpx);
}
.main .scroll-right .right-title {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 18rpx 0;
  font-size: 37rpx;
  position: relative;
}
.main .scroll-right .right-title::before {
  content: '/';
  color: #888;
  position: absolute;
  left: 40%;
}
.main .scroll-right .right-title::after {
  content: '/';
  color: #888;
  position: absolute;
  right: 40%;
}
.main .scroll-right .right-item {
  display: flex;
  flex-wrap: wrap;
  padding: 0 18rpx 20rpx;
}
.main .scroll-right .right-item-box {
  width: 120rpx;
  height: 150rpx;
  padding: 30rpx 28rpx;
}
.main .scroll-right .right-item-box .item-img {
  background-color: #585858;
  width: 120rpx;
  height: 120rpx;
}
.main .scroll-right .right-item-box .item-name {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 29rpx;
}
