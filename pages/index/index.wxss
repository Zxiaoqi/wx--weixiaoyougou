/**index.wxss**/
.search {
  position: fixed;
  top: 0;
  width: 100%;
  background-color: #0051ff;
  z-index: 999;
}
.pics .swiper-pic {
  width: 750rpx;
  height: 340rpx;
}
.pics .swiper-pic .swiper-navigetor {
  height: 100%;
  width: 100%;
}
.pics .swiper-pic .swiper-navigetor .pic {
  height: 100%;
  width: 100%;
}
.tabs {
  display: flex;
  width: 100%;
  justify-content: space-around;
  padding: 12rpx 31rpx;
}
.tabs .tab-bar {
  width: 126rpx;
  text-align: center;
}
.tabs .tab-bar .tab-icon {
  width: 100%;
  height: 140rpx;
}
.shop-card {
  width: 100%;
  padding: 20rpx 0;
}
.shop-card .shop-title {
  padding: 0 12rpx;
  height: 59rpx;
}
.shop-card .shop-item {
  display: flex;
  padding: 0 12rpx;
  height: 386rpx;
}
.shop-card .shop-item .item-left {
  width: calc(33.33333333%);
  cursor: pointer;
}
.shop-card .shop-item .item-right {
  width: calc(66.66666667%);
  display: flex;
  flex-wrap: wrap;
  padding-left: 15rpx;
}
.shop-card .shop-item .item-right .right-img {
  cursor: pointer;
}
.shop-card .shop-item .item-right .right-img:nth-of-type(1) {
  margin: 0 11rpx 1rpx 0;
}
.shop-card .shop-item .item-right .right-img:nth-of-type(4) {
  margin: 0 0 0 11rpx;
}
.shop-card .shop-item .item-img {
  width: 100%;
  height: 100%;
}
