<!--index.wxml-->
<view class="container">
  <view class="search">
    <search></search>
  </view>
  <view class="pics">
    <swiper indicator-dots class="swiper-pic"
    indicator-active-color="rgba(0, 81, 255, .7)"
    autoplay circular interval="{{8000}}"
    easing-function="easeInOutCubic">
      <swiper-item wx:for="{{swiperlist}}" wx:key="goods_id">
        <navigator url="{{item.navigator_url}}" open-type="{{item.open_type}}"
        class="swiper-navigetor">
          <image src="{{item.image_src}}" mode="aspectFill"
          class="pic"/>
        </navigator>
      </swiper-item>
    </swiper>
  </view>
  <view class="tabs">
      <navigator class="tab-bar" wx:for="{{catitemslist}}" wx:key="name"
      url="{{item.navigator_url}}" open-type="{{item.open_type}}">
        <image src="{{item.image_src}}" mode class="tab-icon"/>
      </navigator>
  </view>
  <view class="shop-card">
    <view class="shop-title">时尚女装</view>
    <view class="shop-item" id="container">
      <view class="item-left">
        <image src="/icons/fenlei.png" mode="left"
        class="item-img"></image>
      </view>
      <view class="item-right">
        <view class="right-img">
          <image src="/icons/fenlei.png" mode="widthFix"
          class="item-img"></image>
        </view>
        <view class="right-img">
          <image src="/icons/fenlei.png" mode="widthFix"
          class="item-img"></image>
        </view>
        <view class="right-img">
          <image src="/icons/fenlei.png" mode="widthFix"
          class="item-img"></image>
        </view>
        <view class="right-img">
          <image src="/icons/fenlei.png" mode="widthFix"
          class="item-img"></image>
        </view>
      </view>
    </view>
  </view>
</view>

